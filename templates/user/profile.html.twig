{% extends 'base.html.twig' %}

{% block title %}Profile list{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ 'user_detail_title'|trans }}</h1>
        <ul>
            <li>{{ 'display_first_name'|trans({'_firstName_': user.firstName, '_lastName_': user.lastName}) }}</li>
            <li>Nom: {{ user.lastName|upper }}</li>
            <li>Email: {{ user.email }}</li>
            <li>Date de naissance: {{ user.birthDate|date('d F Y') }}</li>
        </ul>

        {{ form(form) }}
    </div>
{% endblock %}
